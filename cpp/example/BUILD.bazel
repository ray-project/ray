cc_binary(
    name = "example",
    srcs = glob([
        "*.cc",
    ]),
    args = [
        "--ray-dynamic-library-path $(location example.so)",
    ],
    linkstatic = True,
    deps = [
        ":example.so",
        "@ray_api_libs//:ray_api",
    ],
)

cc_binary(
    name = "example.so",
    srcs = glob([
        "*.cc",
    ]),
    linkstatic = True,
    deps = [
        "@ray_api_libs//:ray_api",
    ],
)
