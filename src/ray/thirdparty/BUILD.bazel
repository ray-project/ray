load("//bazel:ray.bzl", "ray_cc_library")

ray_cc_library(
    name = "setproctitle",
    srcs = glob(["setproctitle/**/*.c"]),
    hdrs = glob(["setproctitle/**/*.h"]),
    deps = ["@local_config_python//:python_headers"],
    local_defines = select({
        "@platforms//os:linux": ["HAVE_SYS_PRCTL_H"],
        "@platforms//os:macos": ["__darwin__"],
        "//conditions:default": [],
    }),
)

ray_cc_library(
    name = "sha256",
    srcs = ["sha256.c"],
    hdrs = ["sha256.h"],
)

ray_cc_library(
    name = "aligned_alloc",
    srcs = ["aligned_alloc.c"],
    hdrs = ["aligned_alloc.h"],
)

ray_cc_library(
    name = "dlmalloc",
    hdrs = ["dlmalloc.c"],
)
