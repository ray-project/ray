load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
    ),
)

cmake(
    name = "libredis++",
    cache_entries = {
        "REDIS_PLUS_PLUS_BUILD_ASYNC": "libuv",
        "REDIS_PLUS_PLUS_BUILD_TEST": "OFF",
        "HIREDIS_LIB": "$EXT_BUILD_DEPS/lib",
        "HIREDIS_HEADER": "$EXT_BUILD_DEPS/include",
        "REDIS_PLUS_PLUS_ASYNC_LIB_HEADER": "$EXT_BUILD_DEPS/libuv_a/include",
        "REDIS_PLUS_PLUS_ASYNC_LIB": "$EXT_BUILD_DEPS/libuv_a/lib",
        "BUILD_SHARED_LIBS": "OFF",
    },
    lib_source = "//:all_srcs",
    deps = [
        "@libuv//:libuv_a",
        "@com_github_redis_hiredis//:libhiredis",
    ],
    visibility = ["//visibility:public"],
)
