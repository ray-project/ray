<?xml version="1.0" encoding="utf-8" ?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <files>
    <!--binary files-->
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${project.basedir}/../bin/run.sh</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${project.basedir}/../bin/clean.sh</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${project.basedir}/../bin/driver.sh</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${ray.build.home}/src/common/thirdparty/redis/src/redis-server</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${ray.build.home}/src/plasma/plasma_store_server</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${ray.build.home}/src/ray/raylet/raylet</source>
    </file>
    <file>
      <outputDirectory>bin</outputDirectory>
      <source>${ray.build.home}/src/ray/raylet/raylet_monitor</source>
    </file>
    <!--config file-->
    <file>
      <outputDirectory>conf</outputDirectory>
      <source>${project.basedir}/../conf/assembly.conf</source>
    </file>
    <file>
      <outputDirectory>conf</outputDirectory>
      <source>${project.basedir}/../conf/log4j.properties</source>
    </file>
    <file>
      <outputDirectory>conf</outputDirectory>
      <source>${project.basedir}/../conf/ray.default.conf</source>
    </file>
  </files>
  <!--native libraries-->
  <fileSets>
    <fileSet>
      <directory>${ray.build.home}/src/common/redis_module</directory>
      <outputDirectory>native</outputDirectory>
      <includes>
        <include>libray_redis_module.so</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${ray.build.home}/src/plasma</directory>
      <outputDirectory>native</outputDirectory>
      <includes>
        <include>libplasma_java.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${ray.build.home}/src/local_scheduler</directory>
      <outputDirectory>native</outputDirectory>
      <includes>
        <include>liblocal_scheduler_library_java.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${ray.build.home}/src/ray/raylet</directory>
      <outputDirectory>native</outputDirectory>
      <includes>
        <include>*.a</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.ray:ray-tutorial</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <outputDirectory>jar</outputDirectory>
      <includes>
        <include>org.ray:ray-tutorial</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
