root = true

[*]
indent_style = space
end_of_line = lf

[*.{bzl,bazel}]
indent_size = 4

[*.{h,hpp,hxx,cpp,cxx,cc,c}]
indent_size = 2
max_line_length = 90

[*.html]
indent_size = 2

[*.java]
indent_size = 2

[*.proto]
indent_size = 2

[*.{py,pyx,pxd,pxi}]
indent_size = 4
max_line_length = 79

[*.sh]
indent_size = 2
